<div class="main-container">
    <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:alert] %>
        <div class="alert"><%= flash[:alert] %></div>
    <% end %>
    
    <h1 class="main-header"> Sign In </h1>
    <%= form_with url: sign_in_path do |form| %>
        <%= form.label :email, class: "form-label" %> <br>
        <%= form.text_field :email ,placeholder: "abc@gmail.com" %> <br><br>
        <%= form.label :password, class: "form-label"%> <br>
        <%= form.password_field :password  ,placeholder: "password" %> <br><br>
        <br>
        <%= form.submit "Sign In",class: "button" %>
        <p class="main-text"> New User</p>
        <%= link_to "Sign Up", sign_up_path, class: "to-button"%>
    <% end %>
</div>